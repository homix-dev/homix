# MQTT Configuration
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=nats-mqtt-bridge

# NATS Configuration
NATS_SERVERS=nats://localhost:4222
NATS_USER=home
NATS_PASSWORD=changeme
NATS_CLIENT_NAME=mqtt-nats-bridge

# Bridge Configuration
MQTT_TO_NATS_PREFIX=homeassistant
NATS_TO_MQTT_PREFIX=home.devices
ENABLE_DISCOVERY=true
DISCOVERY_PREFIX=homeassistant

# Performance
MAX_CONCURRENT_MESSAGES=100
MESSAGE_BUFFER_SIZE=1000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# State persistence
ENABLE_PERSISTENCE=true
STATE_FILE=bridge_state.json